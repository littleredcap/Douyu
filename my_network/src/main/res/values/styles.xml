<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffffff</item>
        <item name="colorPrimaryDark">#ff000000</item>
        <item name="android:textColorPrimary">#ff000000</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="popupDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="launchActivityTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/yukee</item>
    </style>
    <style name="anim_activity_info" parent="AppTheme">
        <item name="android:activityCloseEnterAnimation">@anim/second_activity_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/second_activity_exit</item>
        <!--<item name="android:activityOpenEnterAnimation"></item>
        <item name="android:fragmentOpenExitAnimation"></item>-->
    </style>
</resources>
