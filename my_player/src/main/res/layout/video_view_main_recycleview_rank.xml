<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:background="#F0F0F0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_video_view_main_recycleview_rank_daily"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="贡献日榜"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/video_view_main_recycleview_rank_tv_bg"/>
        <TextView
            android:id="@+id/tv_video_view_main_recycleview_rank_weekly"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="贡献周榜"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/video_view_main_recycleview_rank_tv_bg3"/>
        <TextView
            android:id="@+id/tv_video_view_main_recycleview_rank_fans"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="粉丝榜"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/video_view_main_recycleview_rank_tv_bg2"/>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/video_view_main_recycleview_rank_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>