<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F7F7F7">

<com.youth.banner.Banner
    android:id="@+id/home_page_recommend_in_recommend_banner"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:image_scale_type="fit_xy"
    android:background="@drawable/home_page_recommend_banner_round_corner_bg"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

<TextView
    android:id="@+id/home_page_general_game_live"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:text="直播"
    android:textSize="17sp"
    android:textColor="#FFC4C4C4"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/home_page_recommend_in_recommend_banner" />

<TextView
    android:id="@+id/home_page_general_game_video"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="45dp"
    android:text="视频"
    android:textSize="17sp"
    android:textColor="#FFC4C4C4"
    app:layout_constraintStart_toEndOf="@+id/home_page_general_game_live"
    app:layout_constraintTop_toTopOf="@+id/home_page_general_game_live" />

<TextView
    android:id="@+id/home_page_general_game_match_preview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="45dp"
    android:text="赛事预告"
    android:textSize="17sp"
    android:textColor="#FFC4C4C4"
    app:layout_constraintStart_toEndOf="@+id/home_page_general_game_video"
    app:layout_constraintTop_toTopOf="@+id/home_page_general_game_live" />

<FrameLayout
    android:id="@+id/home_page_rec_general_game_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/home_page_general_game_live">
</FrameLayout>
</android.support.constraint.ConstraintLayout>