<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="55dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/video_view_main_bottom_bar_gift"/>
    <EditText
        android:id="@+id/video_view_main_bottom_bar_send_et"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:gravity="center_vertical"
        android:hint="吐个槽呗~"
        android:background="@null"
        android:drawableEnd="@drawable/video_view_main_bottom_bar_send" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="12sp"
        android:paddingTop="7dp"
        android:layout_marginStart="10dp"
        android:text="互动"
        android:drawableTop="@drawable/video_view_main_bottom_bar_interact"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:src="@android:drawable/ic_menu_mylocation"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="20dp"
        android:src="@android:drawable/ic_menu_mylocation"/>
</LinearLayout>