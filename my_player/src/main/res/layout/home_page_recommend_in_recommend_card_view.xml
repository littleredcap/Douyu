<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/home_page_rec_in_rec_card_view_room_title">
                <ImageView
                    android:id="@+id/home_page_rec_in_rec_card_view_room_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/yukee"/>
                <TextView
                    android:id="@+id/home_page_rec_in_rec_card_view_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="陈钰琪的直播间"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="12sp"
                    android:layout_margin="5dp"
                    android:layout_gravity="start|bottom"/>
            </FrameLayout>


            <TextView
                android:id="@+id/home_page_rec_in_rec_card_view_room_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_alignParentBottom="true"
                android:text="我来直播啦"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:background="@android:color/white"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>